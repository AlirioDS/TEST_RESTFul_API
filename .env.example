# ===========================================
# Rails API Boilerplate - Environment Variables
# ===========================================
# Copy this file to .env and update values as needed:
#   cp .env.example .env
#
# IMPORTANT: The .env file should NOT be committed to git

# ===========================================
# Docker Compose Configuration
# ===========================================
COMPOSE_FILE=docker-compose.development.yml

# ===========================================
# PostgreSQL Container Configuration
# ===========================================
# These variables configure the PostgreSQL Docker container
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=bd_template_dev

# ===========================================
# Rails Database Connection (Development)
# ===========================================
# These must match the PostgreSQL container settings above
DATABASE_HOST=db-postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=bd_template_dev

# ===========================================
# Rails Database Connection (Test)
# ===========================================
TEST_DATABASE_USER=postgres
TEST_DATABASE_PASSWORD=postgres
TEST_DATABASE_NAME=rails_api_test

# ===========================================
# Rails Application
# ===========================================
RAILS_ENV=development
RAILS_MAX_THREADS=5
RAILS_LOG_LEVEL=info

# ===========================================
# Solid Queue (Background Jobs)
# ===========================================
# Number of worker processes for Solid Queue
JOB_CONCURRENCY=2

# ===========================================
# Optional Settings
# ===========================================
# Uncomment and configure as needed

# Server port (default: 3000)
# PORT=3000

# Run Solid Queue inside Puma (for single-server deployments)
# SOLID_QUEUE_IN_PUMA=true

# Custom PID file location
# PIDFILE=tmp/pids/server.pid

# Web concurrency (Puma workers, only for multi-process mode)
# WEB_CONCURRENCY=2

# CI environment flag (set automatically in CI pipelines)
# CI=true
